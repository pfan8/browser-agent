{
  "name": "chat-browser-agent",
  "version": "1.0.0",
  "description": "Interactive chat agent for browser automation with operation recording",
  "main": "dist-electron/main.js",
  "scripts": {
    "build:packages": "pnpm -r --filter './packages/**' build",
    "dev": "pnpm build:packages && vite",
    "build": "pnpm build:packages && tsc && vite build && electron-builder",
    "preview": "vite preview",
    "preview:electron": "open 'release/mac-arm64/Chat Browser Agent.app'",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:agent": "vitest run --reporter=verbose __tests__/agent/",
    "test:e2e": "playwright test",
    "test:e2e:debug": "tsx scripts/run-e2e-with-debug.ts",
    "test:e2e:fast": "tsx scripts/run-e2e-with-debug.ts --fast",
    "test:e2e:ui": "playwright test --ui",
    "verify:prd": "tsx scripts/verify-prd.ts",
    "test:all": "pnpm test && pnpm test:e2e",
    "acceptance": "tsx scripts/acceptance-test.ts",
    "agent:cli": "tsx scripts/agent-cli.ts",
    "agent:graph": "tsx scripts/visualize-graph.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@chat-agent/agent-core": "workspace:*",
    "@chat-agent/browser-adapter": "workspace:*",
    "cheerio": "^1.0.0",
    "lodash": "^4.17.21",
    "playwright": "1.56.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "10.1.0",
    "remark-gfm": "4.0.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@playwright/test": "1.56.1",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "electron": "39.2.6",
    "electron-builder": "^25.1.8",
    "tsx": "4.21.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^2.1.9",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.browser-agent.chat",
    "productName": "Chat Browser Agent",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
